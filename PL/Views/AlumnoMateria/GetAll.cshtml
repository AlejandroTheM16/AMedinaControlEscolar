@model ML.Alumno
@{
    ViewBag.Title = "GetAll";
}

<h2>Materias</h2>

<div class="row">
    <div class="col-md-12">
        <h5>Seleccione un alumno para asignarle materias o consultar sus materias</h5>
        <hr />
    </div>
</div>

@*<div class="row">*@
@*<div style="float:right;">
    @Html.ActionLink("+", "Form", "AlumnoMateria", htmlAttributes: new { @class = "btn btn-success" })
</div>*@

<br>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Asignar</td>
            <td class="hidden">IdAlumno</td>
            <td>Nombre</td>

        </tr>
    </thead>
    <tbody>
        @foreach (ML.Alumno alumno in Model.Alumnos)
        {
            <tr>
                <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("MateriaGetByIdAlumno", "AlumnoMateria", new { IdAlumno = alumno.IdAlumno })"></a></td>
                <td class="hidden">@alumno.IdAlumno</td>
                <td>@alumno.Nombre @alumno.ApellidoPaterno @alumno.ApellidoMaterno</td>
                <td></td>

                @*<td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Materia", new { IdAlumno = alumno.IdAlumno})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>*@
            </tr>
        }

    </tbody>
</table>

