                <td>@alumno.Materia.Nombre</td>
                <td>@alumno.Materia.costo</td>
                <td></td>

                @*<td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Materia", new { IdAlumno = alumno.IdAlumno})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>*@
            </tr>
        }

        

        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Form", "AlumnoMateria", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="col-md-3">
                        <input type="submit" value="Guardar" class="btn btn-success" />
                        @Html.ActionLink("Regresar", "MateriaGetByIdAlumno", "AlumnoMateria", htmlAttributes: new { @class = "btn btn-danger" })
                    </div>

                }

            </div>
