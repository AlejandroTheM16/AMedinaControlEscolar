    <tbody>

        @foreach (ML.AlumnoMateria alumno in Model.AlumnoMaterias)
        {
            <tr>
                @*<td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("MateriaGetByIdAlumno", "AlumnoMateria", new { IdAlumno = alumno.Alumno.IdAlumno })"></a></td>*@

                <td> <input type="checkbox" data-val="true" id="IsChecked" name="AlumnoMaterias" value="@alumno.Materia.IdMateria"> </td>
